<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@color/text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FACE MASK DETECTION"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="@color/text_color"/>
    <ImageView
        android:id="@+id/homeimg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue with"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@color/text"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/homegoogle"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="2dp"
        android:drawableLeft="@drawable/googleg_standard_color_18"
        android:drawablePadding="10dp"
        android:text="Google"
        android:textColor="#2F2E2F"
        android:backgroundTint="#F2F2F2"
        android:layout_gravity="center_horizontal"
        android:padding="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:background="@color/text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="@color/text"
            android:textSize="18dp"
            android:padding="10dp"/>
        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:background="@color/text"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <Button
        android:id="@+id/homesignup"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:layout_margin="10dp"
        android:backgroundTint="@color/green"
        android:layout_gravity="center_horizontal"
        android:padding="12dp"/>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="10dp">

       <TextView
           android:id="@+id/text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Already have an Account?"
           android:textSize="18dp"
           android:padding="2dp"
           android:textColor="@color/text"
           app:layout_constraintEnd_toStartOf="@id/homesignin"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"/>
       <TextView
           android:id="@+id/homesignin"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Log In"
           android:gravity="start"
           android:textStyle="bold"
           android:clickable="true"
           android:textColor="@color/text"
           android:textSize="18dp"
           android:padding="2dp"
           app:layout_constraintStart_toEndOf="@id/text"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"/>
   </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
</ScrollView>