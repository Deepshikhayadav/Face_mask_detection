<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Welcome to"
            android:textColor="@color/text"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="FACE MASK DETECTION"
            android:textColor="@color/text_color"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/homeimg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/common_google_signin_btn_icon_dark_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="Continue with"
            android:textColor="@color/text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/homegoogle"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:backgroundTint="#F2F2F2"
            android:drawableLeft="@drawable/googleg_standard_color_18"
            android:drawablePadding="10dp"
            android:elevation="2dp"
            android:padding="12dp"
            android:text="Google"
            android:textColor="#2F2E2F" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="@color/text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="OR"
                android:textColor="@color/text"
                android:textSize="18dp" />

            <View
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="@color/text" />
        </LinearLayout>

        <Button
            android:id="@+id/homesignup"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:backgroundTint="@color/green"
            android:padding="12dp"
            android:text="Create New Account" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Already have an Account?"
                android:textColor="@color/text"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/homesignin"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/homesignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="start"
                android:padding="2dp"
                android:text="Log In"
                android:textColor="@color/text"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/text"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>